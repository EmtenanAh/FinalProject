<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f0eb"
    tools:context=".View.Details.DetailsActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="378dp"
        android:layout_height="305dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name"
        android:layout_width="180dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/robotoslab_medium"
        android:textColor="#929292"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/typeD"
        android:layout_width="189dp"
        android:layout_height="39dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/robotoslab_medium"
        android:textColor="#929292"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/descriptionD"
        android:layout_width="326dp"
        android:layout_height="137dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/robotoslab_medium"
        android:textColor="#929292"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />


    <TextView
        android:id="@+id/emailD"
        android:layout_width="226dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="43dp"
        android:background="#f1f0eb"
        android:drawableStart="@mipmap/email"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawablePadding="5dp"
        android:fontFamily="@font/robotoslab_medium"
        android:gravity="center|start"
        android:textAlignment="textStart"
        android:textColor="#929292"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/location"
        app:layout_constraintTop_toBottomOf="@+id/descriptionD"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/phoneD"
        android:layout_width="226dp"
        android:layout_height="61dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="7dp"
        android:background="#f1f0eb"
        android:drawableStart="@mipmap/phone"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawablePadding="5dp"
        android:fontFamily="@font/robotoslab_medium"
        android:gravity="center|start"
        android:textAlignment="textStart"
        android:textColor="#929292"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailD"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="101dp"
        android:layout_height="83dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionD"
        app:srcCompat="@mipmap/location" />

</androidx.constraintlayout.widget.ConstraintLayout>