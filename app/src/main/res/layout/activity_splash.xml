<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff7838"
    android:textAlignment="textEnd"
    tools:context=".View.Splash.Splash">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/x"
        android:layout_width="348dp"
        android:layout_height="486dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/gg">


    </com.airbnb.lottie.LottieAnimationView>

    <TextView
        android:id="@+id/txt_Kindergarten"
        android:layout_width="397dp"
        android:layout_height="86dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="4dp"
        android:drawableEnd="@drawable/ic_baseline_favorite_24"
        android:fontFamily="@font/fonta"
        android:text="Little Angel Kindergarten"
        android:textAlignment="center"
        android:textColor="#FFDDA3 "
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/x" />
</androidx.constraintlayout.widget.ConstraintLayout>